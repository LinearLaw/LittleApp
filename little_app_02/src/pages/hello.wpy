         */
        methods = {
            tapEvent(text,event){
                console.log("tap event occured : " + text  );
            },
            switchNotice(){
                this.notice = !this.notice;
                //访问app.wpy的全局方法，使用this.$parent
                this.$parent.showTestInfo();
            }
        }
        /**
         * @desc 与methods不同的是，events主要存放的是$broadcast、$emit、$invoke等事件的函数。
         */
        events = {

        }
    }
</script>
